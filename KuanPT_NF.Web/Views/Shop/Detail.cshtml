@model ShopModel
@using KuanPT_NF.Web.Models;
@{
    Layout = null;
}

<!DOCTYPE html> 
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <link rel="stylesheet" type="text/css" href="/Content/Styles/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Styles/components.min.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Styles/theme.css" />
    <script type="text/javascript" src="/Scripts/jquery-1.10.2.min.js"></script>
    <title>产品详细</title> 
</head>
<body>
    <div class="row widget-row">
        <div class="col-md-12">
            <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20">
                <div class="widget-thumb-wrap row">
                    <div class="col-xs-pull-12">
                        <div class="widget-thumb-body">
                            <div>
                                <span class="widget-thumb-title pcenter">
                                    <img src="/@Model.Img"  style="height:200px;"/>
                                </span>
                                <div class="widget-thumb-title" style="margin-top: 2px;margin-left:60px;"><span>套餐名称：</span><span style="color: #52B4FF">@Model.ShopName</span> </div>
                                <div class="widget-thumb-title" style="margin-top: 2px;margin-left:60px;"><span>套餐简介：</span><span style="color:#52B4FF">@Model.ShortDescription</span></div>
                                <div class="widget-thumb-title" style="margin-top: 2px;margin-left:60px;"><span>套餐价格：</span><span style="color:orangered">@Model.Price         </span><span>元/月</span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="pull-right" style="margin-right:68px;">
            <div style="position: absolute;z-index:1000;">
                <a href="https://kefu.easemob.com/webim/im.html?tenantId=36541&emgroup=%E5%AE%A2%E6%9C%8D%E7%BB%84&phone=13800138000"> <img src="~/Content/Images/onlineservice.png" style="width:64px;" /></a>
            </div>
        </div>
        <div class="col-md-12">
            <div class="tabbable-line">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#tab_1" data-toggle="tab" aria-expanded="true"> <span style="font-weight:500;font-size:16px;">业务介绍</span> </a>
                    </li>
                    <li class="">
                        <a href="#tab_2" data-toggle="tab" aria-expanded="false"><span style="font-weight:500;font-size:16px;"> 温馨提示</span> </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1">
                        <div class="widget-thumb-wrap row">
                            <div class="col-xs-pull-12">
                                <div class="widget-thumb-body">
                                    <div style="padding-left:16px;padding-right:4px;font-size:14px;font-weight:600; color:#A0A0A0">
                                        @Html.Raw(HttpUtility.HtmlDecode(Model.Description))
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="tab-pane" id="tab_2">
                        <div class="widget-thumb-wrap row">
                            <div class="col-xs-pull-12">
                                <div class="widget-thumb-body">
                                    <div style="padding-left:16px;padding-right:4px;font-size:14px;font-weight:600; color:#A0A0A0">                                       
                                     @Html.Raw(HttpUtility.HtmlDecode(Model.Remark))
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="widget-thumb widget-bg-color-white text-uppercase">

                <div class="widget-thumb-wrap" style="padding-left:10px;padding-right:10px;">
                    <a href="https://kefu.easemob.com/webim/im.html?tenantId=36541&emgroup=%E5%AE%A2%E6%9C%8D%E7%BB%84&phone=13800138000" class="btn blue btn-block">立即在线办理</a>
                </div>
            </div>
        </div>

    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            handleTabs();
        });
        // Handles Tabs
        var handleTabs = function () {
            $(".nav.nav-tabs li").each(function () {
                $(this).on("click", function (e) {
                    $(e.target).parent().parent().find("li").removeClass("active");
                    $(e.target).parent().parent().find("li a").removeClass("tabheader");
                    $(e.target).parent().addClass("active");
                    $(e.target).addClass("tabheader");
                    $(".tab-pane").removeClass("active");
                    $($(e.target).attr("href")).addClass("active");
                });
            });
            $(".nav.nav-tabs li:first a").click();
        };
    </script>

</body>
</html>
